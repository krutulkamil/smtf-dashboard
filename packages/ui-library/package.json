{
  "name": "@smtf/ui-library",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/index.umd.cjs",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.cjs"
    },
    "./styles.css": "./dist/ui-library.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "pnpm run build:stencil && vite build && tsc -p tsconfig.build.json",
    "build:stencil": "cd stencil && stencil build",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md,mjs,cjs}\"",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "dependencies": {
    "@stencil/react-output-target": "^1.2.0",
    "class-variance-authority": "^0.7.1"
  },
  "devDependencies": {
    "@smtf/eslint-config": "workspace:*",
    "@stencil/core": "^4.38.2",
    "@storybook/addon-docs": "^10.0.2",
    "@storybook/addon-onboarding": "^10.0.2",
    "@storybook/react-vite": "^10.0.2",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "5.1.0",
    "@vitest/coverage-v8": "4.0.6",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^10.0.2",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "vite": "7.1.12",
    "vite-plugin-dts": "4.5.4",
    "vitest": "4.0.6"
  }
}
